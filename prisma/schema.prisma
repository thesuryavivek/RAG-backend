generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Source {
  id        String     @id @default(cuid())
  type      String
  title     String?
  rawText   String
  sourceUrl String?
  createdAt DateTime   @default(now())
  citations Citation[]
}

model Message {
  id        String     @id @default(cuid())
  question  String
  answer    String?
  citations Citation[]
  createdAt DateTime   @default(now())
}

model Citation {
  id        String   @id @default(cuid())
  sourceId  String
  source    Source   @relation(fields: [sourceId], references: [id])
  messageId String
  message   Message  @relation(fields: [messageId], references: [id])
  createdAt DateTime @default(now())
}
